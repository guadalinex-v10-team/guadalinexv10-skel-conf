#!/bin/bash

# Check if festival is running
PID=`pidof festival`
if [ $PID -gt 0 ]
then
  echo "Festival already running"
else
  echo "Starting festival"
  /usr/bin/festival -b /etc/festival.scm --server &
fi


# Run speech dispatcher
echo "Starting speech dispatcher"
/usr/bin/speech-dispatcher-orig

# Stop festival
PID=`pidof festival`
echo "Stop festival"
kill $PID


